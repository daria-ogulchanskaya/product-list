@model ProductsList.Controllers.ProductsController
@{
    ViewData["Title"] = "Add product";
}

<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm("Add", "Products", FormMethod.Post))
{
    <table>
        <tr>
            <td align="center"><p>Name</p></td>
            <td><input type="text" name="Name" /> </td>
        </tr>
        <tr>
            <td align="center"><p>Amount</p></td>
            <td><input type="text" name="Amount" /> </td>
            <td>
                <select id="units">
                    <option value="pieces">Pieces</option>
                    <option value="liter">Liter</option>
                    <option value="milliliter">Milliliter</option>
                    <option value="gram">Gram</option>
                    <option value="kilogram">Kilogram</option>
                </select>
            </td>
        </tr>
        <tr>
            <td><input type="submit" class="addbtn" value="Add" /> </td>
            <td></td>
        </tr>
    </table>
}
